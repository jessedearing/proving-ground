<div>
  <h3 class="node_title"><%= link_to(node.title, node) %></h3>
  <% if show_teaser %>
    <%= raw node.teaser %>
  <% else %>
    <%= raw node.body %>
  <% end %>
  <div class="node_status">
    <span class="read_more"><%= link_to node.publish_date.strftime("%B %d, %Y"), node %></span>
    <% if node.can_comment? %>
    <span class="comment_count"><%= link_to("Comments(#{node.comments.size})",node_path(node, :anchor => 'comments')) %></span>
    <% end %>
  </div>
</div>
