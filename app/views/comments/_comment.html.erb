<div id="comment-<%= comment.id %>" class="comment<%= ' author_comment' if comment.is_author? %>">
  <div class="comment_body">
    <%= comment.body %>
  </div>
  <div class="comment_info">
  <span class="gravatar">
    <img src="<%= gravatar_url(comment.email) %>" align="center" />
  </span>
    <% if comment.url.empty? %>
      <%= comment.name %>
    <% else %>
      <%= link_to(comment.name, comment.url, :rel => 'nofollow') %>
    <% end %>
    &mdash;
    <%= comment.created_at.strftime("%B %e, %Y %r") %>
  </div>
</div>
