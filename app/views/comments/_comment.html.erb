<div id="comment-<%= comment.id %>" class="comment">
  <span class="gravatar">
    <img src="<%= gravatar_url(comment.email) %>" />
  </span>
  <div class="comment_body">
    <%= comment.body %>
  </div>
  <div class="comment_info">
    <% if comment.url %>
      <%= link_to(comment.name, comment.url) %>
    <% else %>
      <%= comment.name %>
    <% end %>
    &mdash;
    <%= comment.publish_date.strftime("%c") %>
  </div>
</div>
